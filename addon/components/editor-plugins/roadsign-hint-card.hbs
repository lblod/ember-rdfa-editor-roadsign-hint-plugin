<div class="modal-dialog__content">
  <p class="u-spacer--tiny">
    Een bijlage uit mobiliteit vlaanderen werd gedetecteerd.
    <br>
    <strong>Wenst u deze informatie te beheren?</strong>
  </p>
</div>
<div class="modal-dialog__footer">
  <WuButtonGroup>
    <WuButton @label="Beheer" @size="small" @isNarrow={{true}} @commandLocation="below" @onClick={{this.openRoadsignModal}} />
  </WuButtonGroup>
</div>


{{#if this.showModal}}
  <EditorPlugins::RoadsignModal
    @closeModal={{this.closeRoadsignModal}}
    @info={{@info}}
  />
{{/if}}
